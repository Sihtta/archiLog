{% extends 'base.html.twig' %}

{% block title %}Portfolio - Modification du mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Formulaire de modification de mot de passe</h1>

		{% for message in app.flashes('success_password_change') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% for message in app.flashes('warning_password_mismatch') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}


		{{ form_start(form, { 'attr': { 'id': 'editPasswordForm' } }) }}

		<div class="floating-label">
			{{ form_widget(form.plainPassword.first, { 'attr': { 'placeholder': 'Mot de passe' } }) }}
			<label for="user_plainPassword_first">Mot de passe</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
					<path d="M19,21H5V9h14V21z M6,20h12V10H6V20z"/>
					<path d="M16.5,10h-1V7c0-1.9-1.6-3.5-3.5-3.5S8.5,5.1,8.5,7v3h-1V7c0-2.5,2-4.5,4.5-4.5s4.5,2,4.5,4.5V10z"/>
					<path d="m12 16.5c-0.8 0-1.5-0.7-1.5-1.5s0.7-1.5 1.5-1.5 1.5 0.7 1.5 1.5-0.7 1.5-1.5 1.5zm0-2c-0.3 0-0.5 0.2-0.5 0.5s0.2 0.5 0.5 0.5 0.5-0.2 0.5-0.5-0.2-0.5-0.5-0.5z"/>
				</svg>
			</div>
			{{ form_errors(form.plainPassword.first) }}
		</div>

		<div class="floating-label">
			{{ form_widget(form.plainPassword.second, { 'attr': { 'placeholder': 'Confirmation du mot de passe' } }) }}
			<label for="user_plainPassword_second">Confirmation du mot de passe</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
					<path d="M19,21H5V9h14V21z M6,20h12V10H6V20z"/>
					<path d="M16.5,10h-1V7c0-1.9-1.6-3.5-3.5-3.5S8.5,5.1,8.5,7v3h-1V7c0-2.5,2-4.5,4.5-4.5s4.5,2,4.5,4.5V10z"/>
					<path d="m12 16.5c-0.8 0-1.5-0.7-1.5-1.5s0.7-1.5 1.5-1.5 1.5 0.7 1.5 1.5-0.7 1.5-1.5 1.5zm0-2c-0.3 0-0.5 0.2-0.5 0.5s0.2 0.5 0.5 0.5 0.5-0.2 0.5-0.5-0.2-0.5-0.5-0.5z"/>
				</svg>
			</div>
			{{ form_errors(form.plainPassword.second) }}
		</div>

		<div class="floating-label">
			{{ form_widget(form.newPassword, { 'attr': { 'placeholder': 'Nouveau mot de passe' } }) }}
			<label for="user_newPassword">Nouveau mot de passe</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
					<path d="M19,21H5V9h14V21z M6,20h12V10H6V20z"/>
					<path d="M16.5,10h-1V7c0-1.9-1.6-3.5-3.5-3.5S8.5,5.1,8.5,7v3h-1V7c0-2.5,2-4.5,4.5-4.5s4.5,2,4.5,4.5V10z"/>
				</svg>
			</div>
			{{ form_errors(form.newPassword) }}
		</div>


		{{ form_end(form) }}
	</div>
{% endblock %}
