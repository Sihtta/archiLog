{% extends 'base.html.twig' %}

{% block title %}Liste des Tâches{% endblock %}

{% block body %}
<style>
		.main-section {
			display: flex;
			height: 100vh;
			background-color: #1a1a1a;
			color: #fff;
			font-family: 'Poppins', sans-serif;
			flex-wrap: wrap;
		}

		.left-side {
			flex: 1;
			background: url('/images/2024-12-13-72f878a2-a5e2-4891-b30e-e599efedfda1.avif') no-repeat center center;
			background-size: cover;
			min-height: 300px;
			background-position: center top;
		}

		.right-side {
			flex: 1;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: flex-start;
			padding: 40px;
		}

		.right-side h1 {
			font-size: 4rem;
			max-width: 90%;
			color: white;
			margin: 0;
			text-transform: uppercase;
			line-height: 1.2;
		}

		.right-side p {
			font-size: 1rem;
			margin: 20px 0 30px;
			line-height: 1.8;
		}

		.buttons {
			display: flex;
			gap: 20px;
		}

		.btn {
			text-decoration: none;
			color: #fff;
			padding: 12px 24px;
			border: 2px solid #fff;
			border-radius: 30px;
			transition: all 0.3s ease;
			font-weight: 500;
		}

		.btn:hover {
			background-color: #fff;
			color: #1a1a1a;
			transform: translateY(-2px);
		}

		#typed-text {
			font-size: 4rem;
			max-width: 90%;
			color: #fff;
			white-space: pre-wrap;
			overflow: hidden;
		}

		@media(max-width: 1200px) {
			.right-side h1,
			#typed-text {
				font-size: 3rem;
			}
		}

		@media(max-width: 992px) {
			.main-section {
				flex-direction: column;
			}

			.left-side {
				background-position: center center;
				min-height: 200px;
			}

			.right-side {
				padding: 30px;
				text-align: center;
				align-items: center;
			}

			.right-side h1,
			#typed-text {
				font-size: 2.5rem;
			}

			.right-side p {
				font-size: 1.1rem;
				margin: 20px 0 25px;
			}

			.buttons {
				justify-content: center;
			}

			.btn {
				width: 80%;
				max-width: 250px;
			}
		}

		@media(max-width: 768px) {
			.right-side h1,
			#typed-text {
				font-size: 2rem;
			}

			.right-side p {
				font-size: 1rem;
				margin: 15px 0 20px;
			}

			.btn {
				width: 100%;
				max-width: 200px;
				padding: 8px 16px;
			}
		}
	</style>
<h1>Liste des Tâches</h1>
<a href="{{ path('task_create') }}" class="btn btn-primary">Créer une tâche</a>
<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Statut</th>
            <th>Date limite</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for task in tasks %}
        <tr>
            <td>{{ task.title }}</td>
            <td>{{ task.description|slice(0, 50) ~ '...' }}</td>
            <td>{{ task.status }}</td>
            <td>{{ task.dueDate ? task.dueDate|date('d/m/Y') : 'Aucune' }}</td>
            <td>
                <a href="{{ path('task_edit', {id: task.id}) }}" class="btn btn-warning">Modifier</a>
                <a href="{{ path('task_delete', {id: task.id}) }}" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">Aucune tâche trouvée.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}